<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground"> @drawable/hintergrund1 </item>

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#51b6dc</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#ff3293dc</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#ff36dc43</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ff000000</item>
    </style>

    <style name="AppTheme.LightGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff67dc58</item>
        <item name="colorPrimaryDark">#ff02aa00</item>
        <item name="colorAccent">#ff36dc43</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ff000000</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
    </style>
</resources>
