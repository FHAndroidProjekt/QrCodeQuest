<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  
    <item android:state_pressed ="true">
        <shape>
            <solid
                android:color="#DB0000"/>
            
            <corners 
                android:radius="5sp"/>
            <padding
          		android:left="10dp"
          		android:top="10dp"
          		android:right="10dp"
          		android:bottom="10dp" />
                
                </shape>
    </item>
     <item>
    <shape>
      <gradient
          android:startColor="#FF0000"
          android:centerColor="#A80000"
          android:endColor="#570000"
          android:angle="45" />
       <corners 
          android:radius="5sp"/>
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>

</selector>
